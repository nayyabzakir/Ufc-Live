                            }

                            .ser .liquid {
                                width: 70%;
                                float: left;
                            
                            }

                            .date {
                                width: 33%;
                                float: left;
                            }


                            .date .solid {
                                width: 20%;
                                float: left;
                                font-weight: bold;
                            }

                            .date .liquid {
                                width: 70%;
                                float: left;
                            
                            }

                            .time {
                                width: 33%;
                                float: left;
                            }

                            .time .solid {
